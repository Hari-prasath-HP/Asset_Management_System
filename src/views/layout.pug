doctype html
html
  head
    title Asset Management System
    meta(charset="utf-8")
    meta(name="viewport", content="width=device-width, initial-scale=1")

    link(
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
    )

    // DataTables CSS
    link(
      rel="stylesheet",
      href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css"
    )

  body
    nav.navbar.navbar-expand-lg.navbar-dark.bg-dark
      .container-fluid
        a.navbar-brand(href="/assets") Asset Manager

        button.navbar-toggler(
          type="button",
          data-bs-toggle="collapse",
          data-bs-target="#navbarNav"
        )
          span.navbar-toggler-icon

        .collapse.navbar-collapse#navbarNav
          ul.navbar-nav.me-auto.mb-2.mb-lg-0
            li.nav-item
              a.nav-link(href="/assets") Assets

            li.nav-item
              a.nav-link(href="/categories") Categories

            li.nav-item
              a.nav-link(href="/employees") Employees

            li.nav-item
              a.nav-link(href="/assets/stock") Stock View

          span.navbar-text.text-light
            | Admin Panel

    .container.mt-4
      block content

    // jQuery
    script(src="https://code.jquery.com/jquery-3.7.1.min.js")

    // Bootstrap JS
    script(
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
    )

    // DataTables JS
    script(
      src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"
    )

    // Page specific scripts
    block scripts